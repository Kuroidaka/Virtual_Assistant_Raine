generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  // url      = env("DATABASE_URL")
  url      = "mysql://root:Idaka123@127.0.0.1:3306/raine_DB"
}

model Task {
  id            String   @id
  title         String
  time          DateTime
  repeat        Boolean
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model File {
  id            String  @id
  name          String  @unique
  path          String
  extension     String
  size          Int
  url           String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}